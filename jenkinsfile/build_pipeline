pipeline {
    agent any

environment {
        GIT_CREDENTIALS = credentials('mcb')  
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Frontend') {
            steps {
                dir('webapp') {
                    sh 'npm install'
                    sh '/var/jenkins_home/.npm-global/bin/ng build'
                }
            }
        }

        stage('Build Backend') {
            steps {
                dir('api') {
                    sh './mvnw clean install'
                }
            }
        }

        stage('Archive Jenkinsfile') {
            steps {
                archiveArtifacts artifacts: 'jenkinsfile/build_pipeline', onlyIfSuccessful: true
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminé, vérifiez les artefacts.'
        }
        failure {
            echo 'Le build a échoué, veuillez vérifier les logs pour plus de détails.'
        }
    }
}
